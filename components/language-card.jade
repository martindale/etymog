dom-module#etymog-language-card
  template
    .content
      .meta
        .category {{data.family}}
      a.header(href="{{data.link}}") {{data.name}}
      .description
        h4.header Language Family 
          p {{data.family}}
        h4.header Language Timeline
          p {{data.family}}
      
    .extra.content
      pre {{data}}
  script.
    Polymer({
      is: 'etymog-language-card',
      properties: {
        src: { type: String , observer: '_load' },
        data: { type: Object },
        state: { type: String },
        source: { type: String },
        output: { type: String }
      },
      _load: function(uri, back) {
        var self = this;
        console.log('[etymog:ENTRY-CARD]', '_load', uri, back);
        // TODO: use this API instead:
        // fabric.get(self.src, function(err, data) { ... });
        $.getJSON(uri, function(data) {
          console.log('[etymog:ENTRY-CARD]', 'retrieved:', data);
          self.data = data;
        });
      }
    });
