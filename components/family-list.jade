dom-module#etymog-family-list
  template
    .ui.cards
      template(is="dom-repeat", items="{{data}}")
        etymog-family-card.ui.card(src$="{{item.link}}")

  script.
    Polymer({
      is: 'etymog-family-list',
      properties: {
        src: { type: String , observer: '_load' },
        data: { type: Object },
        state: { type: String },
        source: { type: String },
        output: { type: String }
      },
      _load: function(uri, back) {
        var self = this;
        console.log('[etymog:FAMILY-LIST]', '_load', uri, back);
        self.toggleClass('loading', true);

        // TODO: use this API instead:
        // fabric.get(self.src, function(err, data) { ... });
        $.getJSON(self.src, function(data) {
          self.data = _.shuffle(data);
          self.toggleClass('loading', false);
        });
      }
    });
